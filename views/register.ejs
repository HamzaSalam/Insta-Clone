<% include ./partials/header.ejs %>
<div>
  <div
    class="w-full h-screen bg-center bg-cover bg-[url('https://images.unsplash.com/photo-1541701494587-cb58502866ab?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] flex items-center justify-center"
  >
    <div class="w-[29vw] h-[70vh] bg-white px-20 py-10 rounded-[30px]">
      <h1
        class="text-3xl text-center font-semibold text-zinc-700 tracking-tighter capitalize leading-none"
      >
        Create New Account
      </h1>
      <form action="/register" method="post">
        <input
          class="block border-2 rounded-md mt-2 w-full px-3 py-2"
          type="text"
          name="username"
          placeholder="username"
        />
        <input
          class="block border-2 rounded-md mt-2 w-full px-3 py-2"
          type="email"
          name="email"
          placeholder="email"
        />
        <input
        class="block border-2 rounded-md mt-2 w-full px-3 py-2"
        type="text"
        name="name"
        placeholder="name"
      />
        <input
          class="block border-2 rounded-md mt-2 w-full px-3 py-2"
          type="number"
          name="contact"
          placeholder="contact"
        />
        <input
          class="block border-2 rounded-md mt-2 w-full px-3 py-2"
          type="password"
          name="password"
          placeholder="password"
        />

        <input
          class="block border-2 rounded-full mt-3 w-full px-3 py-2 bg-red-600 text-white rounded-full"
          type="submit"
          value="Register"
        />
        <p
          class="text-xs font-semibold text-zinc-700 mt-7 w-2/3 text-center mx-auto"
        >
          By continuing, you agree to Pinterest's Terms of Service; Opens a new
          tab and acknowledge you've read our Privacy Policy. Notice at
          collection
        </p>
      </form>
      <a
        class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full"
        href="/"
        >Login Existing Account
      </a>
    </div>
  </div>
</div>

